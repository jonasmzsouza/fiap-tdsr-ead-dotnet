@model List<Veiculo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

<div class="text-right mb-2">
    <a asp-action="cadastrar" class="btn btn-outline-dark mb-2 btn-sm">Cadastrar</a>
</div>

<table class="table table-striped">
    <tr>
        <th>Id</th>
        <th>Modelo</th>
        <th>Valor</th>
        <th>Ano</th>
        <th>Data de Compra</th>
        <th>Automático</th>
        <th>Combustível</th>
        <th>Cor</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Modelo</td>
            <td>@item.Valor.ToString("N")</td>
            <td>@item.Ano</td>
            <td>@item.DataCompra.ToShortDateString()</td>
            <td>@(item.Automatico?"Sim":"Não")</td>
            <td>@item.Combustivel</td>
            <td>@item.Cor</td>
            <td>
                <a asp-action="editar" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Editar</a>
                <a asp-action="remover" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Remover</a>
            </td>
        </tr>
    }
</table>